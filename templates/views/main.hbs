    <link rel="shortcut icon" href="img\WhatsApp Image 2025-02-22 at 03.57.21.png" type="image/x-icon" />

    <!-- Link to FontAwesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <title>Bloom Together - Choose Your Journey</title>
    <!-- Link to Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        /* Reset default margins */
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Poppins', sans-serif;
            overflow-x: hidden;
        }

        /* Full Page Animation */
        body {
            opacity: 0;
            transform: scale(1.05);
            animation: fadeInZoom 1.5s ease-out forwards;
            background-color: #f9f9f9;
        }

        @keyframes fadeInZoom {
            0% {
                opacity: 0;
                transform: scale(1.05);
            }
            100% {
                opacity: 1;
                transform: scale(1);
            }
        }

        /* Title */
        .title {
            text-align: center;
            font-size: 48px;
            font-weight: bold;
            color: #333;
            position: absolute;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 2;
            width: 100%;
            pointer-events: none;
            animation: slideDownFromTop 1.5s ease-out forwards;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }

        .subtitle {
            text-align: center;
            font-size: 18px;
            color: #666;
            position: absolute;
            top: 85px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 2;
            width: 80%;
            max-width: 700px;
            pointer-events: none;
            opacity: 0;
            animation: fadeIn 2s ease-out 0.5s forwards;
        }

        @keyframes fadeIn {
            0% { opacity: 0; }
            100% { opacity: 1; }
        }

        /* Slide down from top animation */
        @keyframes slideDownFromTop {
            0% {
                opacity: 0;
                transform: translate(-50%, -100%);
            }
            100% {
                opacity: 1;
                transform: translate(-50%, 0);
            }
        }

        /* Main container */
        .container {
            display: flex;
            flex-direction: row;
            height: 100vh;
        }

        /* Section styling */
        .section {
            flex: 1;
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            transition: all 0.5s ease-in-out;
            overflow: hidden;
            background-size: cover;
            background-position: center;
            box-shadow: 0 0 20px rgba(0,0,0,0.1) inset;
        }

        /* Hover effect for sections */
        .section:hover {
            flex: 1.2;
        }

        /* Women Section with Linear Gradient */
        .women-section {
            background: linear-gradient(to bottom, rgba(255, 105, 180, 0.8), rgba(255, 182, 193, 0.6));
        }

        /* LGBTQ Section with Linear Gradient */
        .lgbtq-section {
            background: linear-gradient(to bottom, rgba(0, 191, 255, 0.8), rgba(135, 206, 250, 0.6));
        }

        /* Image Styling - Reduced to 75% */
        .section img {
            width: 75%;
            height: auto;
            object-fit: contain;
            z-index: 1;
        }

        /* Buttons */
        .btn {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            padding: 15px 30px;
            font-size: 22px;
            font-weight: 600;
            border: none;
            cursor: pointer;
            border-radius: 30px;
            background: linear-gradient(45deg, #ff4081, #ff3f6c);
            color: white;
            transition: box-shadow 0.3s ease;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            z-index: 3;
        }

        .btn:hover {
            background: linear-gradient(45deg, #e6005c, #ff1744);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
        }

        /* Button Link Styling */
        .btn a {
            color: white;
            text-decoration: none;
            display: block;
            width: 100%;
            height: 100%;
        }

        /* Button Link Hover Effect */
        .btn a:hover {
            color: #f8f8f8;
        }
    </style>
</head>
<body>

    <!-- Title -->
     <div class="title">CHOOSE YOUR JOURNEY</div>
   
    <div class="container">
        <!-- Women Section -->
        <div class="section women-section">
            <img src="img/image-2.png" alt="Women">
            <button class="btn"><a href="/Bloom_Together/women">WOMEN</a>
</button>
        </div>

        <!-- LGBTQ Section -->
        <div class="section lgbtq-section">
            <img src="img/LGBT.png" alt="LGBTQ">
<button class="btn"><a href="/Bloom_Together/lgbtq">LGBTQ</a>
</button>        </div>
    </div>

</body>
</html>
